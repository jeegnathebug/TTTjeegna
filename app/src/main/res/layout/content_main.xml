<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.jeegnathebug.tttjeegna.MainActivity"
    android:orientation="vertical"
    tools:showIn="@layout/activity_main"
    android:id="@+id/main_content">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:id="@+id/tableLayout">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="33">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/imageButton1"
                android:layout_column="0"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/blank"
                android:padding="0dp"
                android:layout_margin="3dp"
                android:background="@drawable/blank" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/imageButton2"
                android:layout_column="1"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/blank"
                android:padding="0dp"
                android:layout_margin="3dp"
                android:background="@drawable/blank" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/imageButton3"
                android:layout_column="2"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/blank"
                android:padding="0dp"
                android:layout_margin="3dp"
                android:background="@drawable/blank" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="33">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/imageButton4"
                android:layout_column="0"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/blank"
                android:padding="0dp"
                android:layout_margin="3dp"
                android:background="@drawable/blank" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/imageButton5"
                android:layout_column="1"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/blank"
                android:padding="0dp"
                android:layout_margin="3dp"
                android:background="@drawable/blank" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/imageButton6"
                android:layout_column="2"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/blank"
                android:padding="0dp"
                android:layout_margin="3dp"
                android:background="@drawable/blank" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="33">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/imageButton7"
                android:layout_column="0"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/blank"
                android:padding="0dp"
                android:layout_margin="3dp"
                android:background="@drawable/blank" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/imageButton8"
                android:layout_column="1"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/blank"
                android:padding="0dp"
                android:layout_margin="3dp"
                android:background="@drawable/blank" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/imageButton9"
                android:layout_column="2"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/blank"
                android:padding="0dp"
                android:layout_margin="3dp"
                android:background="@drawable/blank" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/button_restart"
            android:id="@+id/buttonRestart"
            android:onClick="restartGame" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/button_versus"
            android:id="@+id/buttonVersus"
            android:onClick="changeGameMode" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/score_title"
            android:id="@+id/buttonScores"
            android:onClick="scores" />
    </LinearLayout>

    <TextView
        android:textAlignment="center"
        android:text="@string/PvE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewVersus" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewPlayerTurn"
        android:textAlignment="center" />
</LinearLayout>
