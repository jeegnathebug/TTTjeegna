<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ttt.jeegnathebug.tictactoe.MainActivity"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"
        android:id="@+id/tableLayout">
        <TableRow
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="33">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="33"
                android:id="@+id/imageButton1"
                android:layout_column="0"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="33"
                android:id="@+id/imageButton2"
                android:layout_column="1"
                android:scaleType="centerInside"
                android:adjustViewBounds="true" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="33"
                android:id="@+id/imageButton3"
                android:layout_column="2"
                android:scaleType="centerInside"
                android:adjustViewBounds="true" />
        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="33">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="33"
                android:id="@+id/imageButton4"
                android:layout_column="0"
                android:scaleType="centerInside"
                android:adjustViewBounds="true" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="33"
                android:id="@+id/imageButton5"
                android:layout_column="1"
                android:scaleType="centerInside"
                android:adjustViewBounds="true" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="33"
                android:id="@+id/imageButton6"
                android:layout_column="2"
                android:scaleType="centerInside"
                android:adjustViewBounds="true" />
        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="33">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="33"
                android:id="@+id/imageButton7"
                android:layout_column="0"
                android:scaleType="centerInside"
                android:adjustViewBounds="true" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="33"
                android:id="@+id/imageButton8"
                android:layout_column="1"
                android:scaleType="centerInside"
                android:adjustViewBounds="true" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="33"
                android:id="@+id/imageButton9"
                android:layout_column="2"
                android:scaleType="centerInside"
                android:adjustViewBounds="true" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="@string/button_restart"
            android:id="@+id/button"
            android:layout_column="0"
            android:onClick="restartGame"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="@string/button_versus"
            android:id="@+id/button2"
            android:layout_column="1"
            android:onClick="changeGameMode" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="@string/button_reset_scores"
            android:id="@+id/button3"
            android:layout_column="2"
            android:onClick="resetScores" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="@string/button_scores"
            android:id="@+id/button4"
            android:layout_column="3"
            android:onClick="scores" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="@string/button_about"
            android:id="@+id/button5"
            android:layout_column="3"
            android:onClick="about" />
    </LinearLayout>

    <TextView
        android:text="@string/PvE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:layout_weight="5" />
</LinearLayout>
